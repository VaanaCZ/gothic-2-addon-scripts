	AI_Output (self ,other,"DIA_Niclas_HaveALook_No_03_01"); //Czuj się jak u siebie. Mam nadzieje, że nie będzie ci przeszkadzać, jeśli coś zjem.
	
	B_UseItem (self ,ItFoMutton);
	
	Info_ClearChoices (DIA_Niclas_HaveALook);
