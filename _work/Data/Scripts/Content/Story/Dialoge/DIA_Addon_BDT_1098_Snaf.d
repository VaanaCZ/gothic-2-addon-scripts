		{
			B_LogEntry (Topic_Addon_Senyan,"Я должен порвать отношения с Сеньяном. Нападать на него напрямую было бы глупо, поэтому я должен сначала с ним поговорить.");
			Snaf_Tip_Senyan = TRUE;
		};
