INSTANCE DIA_Lester_DI_Hello (C_INFO)
{
	npc			= PC_Psionic_DI;
	nr			= 1;
	condition	= DIA_Lester_DI_Hello_Condition;
	information	= DIA_Lester_DI_Hello_Info;
	permanent	 = 	TRUE;

	description = "Y a-t-il quelque chose que vous voudriez me dire ?";
};    
                   
FUNC INT DIA_Lester_DI_Hello_Condition()
{	
	if (Npc_IsDead(UndeadDragon)  == FALSE)
	{
		return TRUE;
	};
};
var int DIA_Lester_DI_SCGotWarning1;
var int DIA_Lester_DI_SCGotWarning2;
FUNC VOID DIA_Lester_DI_Hello_Info()
{	
	AI_Output	(other ,self,"DIA_Lester_DI_Hello_15_00");	//Y a-t-il quoi que ce soit que vous deviez me dire ?

	if (Npc_IsDead(Mario_DI) == FALSE)
	&& (ORkSturmDI  == TRUE)
	&& (DIA_Lester_DI_SCGotWarning1 == FALSE)
	{
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_01");	//Mario a filé quand les orques ont attaqué le bateau, mais je l'ai suivi des yeux malgré le chaos ambiant.
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_02");	//Il a tranquillement avancé vers les orques qui l'ont laissé passer sans rien lui faire.
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_03");	//J'avais un drôle de pressentiment à son sujet depuis le début. Il est manifestement en cheville avec l'ennemi.
		B_GivePlayerXP (XP_Ambient);
		DIA_Lester_DI_SCGotWarning1 = TRUE;
	}
	else if (Npc_IsDead(Mario_DI) == FALSE)
	&& (DIA_Lester_DI_SCGotWarning2 == FALSE)
	{
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_04");	//Cet type étrange qui se fait appeler Mario me met mal à l'aise. Il a une aura malfaisante.
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_05");	//Surveillez vos arrières, mon ami.
		DIA_Lester_DI_SCGotWarning2 = TRUE;
	}
	else
	{
		AI_Output	(self ,other,"DIA_Lester_DI_Hello_13_06");	//Pas pour le moment. Plus tard, peut-être.
	};
};

