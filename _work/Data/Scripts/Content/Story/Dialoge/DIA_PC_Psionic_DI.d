	permanent	 = 	TRUE;

	description = "Nous ne resterons pas ici très longtemps.";
};                       
FUNC INT DIA_PC_Lester_DI_UndeadDragonDead_Condition()
{
	if (Npc_IsDead(UndeadDragon))
	{
		return TRUE;
	};
};

var int DIA_PC_Lester_DI_UndeadDragonDead_OneTime;
FUNC VOID DIA_PC_Lester_DI_UndeadDragonDead_Info()
{	
	AI_Output (other,self ,"DIA_PC_Lester_DI_UndeadDragonDead_15_00"); //Nous n'allons pas rester ici longtemps.

	if (DIA_PC_Lester_DI_UndeadDragonDead_OneTime == FALSE )
	{
		if ((Npc_GetDistToWP(self,"DI_DRACONIANAREA_19")<4000) )
			{
				AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_01"); //C'est comme si mes migraines s'étaient envolées d'un seul coup.
				AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_02"); //Qu'avez-vous fait ?
				AI_Output (other,self ,"DIA_PC_Lester_DI_UndeadDragonDead_15_03"); //J'ai tué l'ennemi.
				AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_04"); //Ce dernier devait être extrêmement puissant. De quoi s'agissait-il au juste ?
				AI_Output (other,self ,"DIA_PC_Lester_DI_UndeadDragonDead_15_05"); //D'un dragon mort-vivant.
			};
	
		if (SC_KnowsMadPsi == TRUE)
			{
				AI_Output (other,self ,"DIA_PC_Lester_DI_UndeadDragonDead_15_06"); //Vos anciens amis du camp des marais m'ont mené la vie dure.
				AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_07"); //Oui. Ne dit-on pas que la foi peut déplacer les montagnes ? Le problème, c'est qu'ils ne servaient pas le bon dieu.
				AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_08"); //Il va me falloir du temps pour surmonter ça.
			};
		DIA_PC_Lester_DI_UndeadDragonDead_OneTime = TRUE;
	};
	AI_Output (self ,other,"DIA_PC_Lester_DI_UndeadDragonDead_13_09"); //J'espère que cela ne se reproduira jamais. Franchement, j'ai tellement envie de fumer de l'herbe des marais que je pourrais épuiser les réserves du monde entier...
	AI_StopProcessInfos (self);
	Npc_ExchangeRoutine	(self,"Start");		
};

