func void B_Preach_Vatras(var int satz)
{
	if (satz == 0) 	
	{	
		AI_Output (self, self, "DIA_Vatras_PREACH_05_00"); //Mais la Lumière était un tourment pour Béliar. Et tout ce qu'Innos créa fut détruit par Béliar.
	};
